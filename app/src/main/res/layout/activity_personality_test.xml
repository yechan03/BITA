<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="visiblity"
            type="boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screen.personalitytype.PersonalityTestActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/personality_test_tool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp">


            <Button
                android:id="@+id/personality_back_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_arrow_back_black_24dp"
                />

            <TextView
                android:id="@+id/toolbar_top_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MBTI검사"
                android:textSize="30sp"
                android:layout_marginLeft="40dp"
                />



        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/personality_result_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/personality_test_tool"
            app:layout_constraintBottom_toTopOf="@id/personality_finish_bt"
            app:layout_constraintLeft_toLeftOf="@id/personality_test_tool"
            app:layout_constraintRight_toRightOf="@id/personality_test_tool"
            android:gravity="center"
            android:textSize="40sp"
            android:fontFamily="@font/apple_sd_gothic_neo_h"
            android:textColor="#000"
            android:visibility="@{visiblity,default = false}"/>


        <WebView
            android:id="@+id/mbti_webview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/personality_test_tool"
            app:layout_constraintBottom_toTopOf="@id/personality_finish_bt"
            app:layout_constraintLeft_toLeftOf="@id/personality_test_tool"
            app:layout_constraintRight_toRightOf="@id/personality_test_tool"
            android:visibility="@{visiblity,default = true}"
            />

        <Button
            android:id="@+id/personality_finish_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingVertical="20dp"
            android:text="검사 결과 보기"
            android:background="#000"
            android:fontFamily="@font/apple_sd_gothic_neo_h"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>