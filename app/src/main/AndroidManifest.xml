<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.david0926.scon">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.david0926.scon.screen.personalitytype.PersonalityTestActivity"/>
        <activity
            android:name="com.david0926.scon.screen.login.ResetPwActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.david0926.scon.screen.profile.EditProfileActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.david0926.scon.screen.chat.ChatActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.david0926.scon.screen.register.RegisterActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.david0926.scon.screen.login.LoginActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
        <activity
            android:name="com.david0926.scon.screen.onboard.OnBoardActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.david0926.scon.screen.SplashActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.david0926.scon.screen.main.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
    </application>

</manifest>